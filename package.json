{
    "name": "stylelint-jest-rule-tester",
    "version": "2.1.6",
    "description": "Simple stylelint.io rule tester that uses Jest.",
    "keywords": [
        "stylelint",
        "jest",
        "rule",
        "test",
        "style",
        "lint",
        "css",
        "less",
        "scss",
        "sass"
    ],
    "homepage": "https://github.com/electrovir/stylelint-jest-rule-tester#readme",
    "bugs": {
        "url": "https://github.com/electrovir/stylelint-jest-rule-tester/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/electrovir/stylelint-jest-rule-tester.git"
    },
    "license": "MIT",
    "author": "electrovir (github.com/electrovir)",
    "main": "dist/index.js",
    "scripts": {
        "prepublishOnly": "npm run test",
        "spellcheck": "virmator spellcheck --extendable-config",
        "test": "virmator compile && jest",
        "test:full": "npm run spellcheck && npm run format check && npm test",
        "format": "virmator format"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.3",
        "@types/stylelint": "^13.13.2",
        "jest": "^27.2.4",
        "stylelint": "^13.13.1",
        "virmator": "^1.2.0"
    }
}
